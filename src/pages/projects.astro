<style lang="scss">
	h2 {
		font-size: 1.25rem;
		line-height: 1.75rem;
		font-weight: 500;
		padding: 0;
		margin: 0;
	}

	.description {
		padding: 0;
		margin: 0;
		line-height: 1.5rem;
		font-size: 1rem;
		margin-top: 0.5rem;
		margin-bottom: 0.25rem;

		p {
			padding: 0;
			margin: 0;
			margin-bottom: 0.25rem;
		}
	}

	.links-section {
		display: flex;
		flex-direction: column;
		gap: 1rem;
		margin-top: 0.25rem;
	}

	@media (min-width: 768px) {
		.links-section {
			flex-direction: row;
		}
	}

	.source-link {
		display: flex;
		flex-direction: row;
		align-items: center;

		svg {
			margin-right: 0.25rem;
		}

		p {
			margin: 0;
			padding: 0;
			vertical-align: text-bottom;
			font-size: 1rem;
		}
	}

	.card-grid {
		display: flex;
		flex-direction: column;
		gap: 1rem;
		justify-content: center;
		margin-top: 1rem;
	}

	@media (min-width: 768px) {
		.card-grid {
			display: grid;
			grid-template-columns: repeat(8, minmax(0, 1fr));
		}

		.personal-card {
			grid-row: span 3/span 3;
			grid-column: span 3/span 3;
		}
	}

	.project-card {
		grid-column: span 2/span 2;
	}

	.project-grid {
		grid-template-columns: repeat(4, minmax(0, 1fr));
		display: grid;
		grid-row: span 4/span 4;
		grid-column: span 5/span 5;
		gap: 1rem;
		justify-content: center;
		max-width: 100%;
		width: 100vw;
		height: 100%;
	}
</style>