---

interface Props {
	madewith: string;
	backgroundColor?: string;
	foregroundColor?: string;
	outlineColor?: string;
}

const { madewith,
backgroundColor = 'var(--color-surface)',
foregroundColor = 'var(--color-on-surface)',
outlineColor = 'var(--color-outline)'  } = Astro.props;
---

<li class="card">
	<div class="top-section">
		<slot name="heading" />
		<p class="madewith">{madewith}</p>
	</div>
	<div class="body">
		<slot name="description" />
	</div>
	<slot name="links" />
</li>

<style lang="scss" define:vars={{ backgroundColor, foregroundColor, outlineColor }}>
.top-section {
	display: flex;
	flex-direction: column;
	margin: 0;
	padding: 0;
	justify-content: center;
}

.card {
  list-style: none;
  width: 100vw;
  height: 100%;
  max-width: 100%;
  //font-size: 1.125rem;
  //line-height: 1.75rem;
  overflow: hidden;
  justify-content: space-between;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding: 1rem;
  margin: 0;
  border-radius: 12px;

  border: 1px solid var(--outlineColor);
  background: var(--backgroundColor);
  color: var(--foregroundColor);

  transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
}

.madewith {
  color: var(--color-on-surface-variant);
  font-size: .875rem;
  line-height: 1.25rem;
  padding: 0;
  margin: 0;
}

.body {
  font-size: 1rem;
  margin-top: 0rem;
  margin-bottom: 0;
  transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
}
</style>
