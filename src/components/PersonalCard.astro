<style lang="scss" define:vars={{ backgroundColor, foregroundColor, outlineColor }}>
.avatar {
  max-width: 96px;
  max-height: auto;
  clip-path: circle();
}

.heading {
  color: var(--color-primary);
  font-size: 1.5rem;
  line-height: 2rem;
  margin-top: 0.5rem;
}

.emphasis {
  font-weight: 800;
}

.subtitle {
  font-size: 0.9rem;
  line-height: 1.5rem;
}

.contact {
  color: var(--color-on-surface-variant);
  font-size: 0.85rem;
  line-height: 1.25rem;
}

.social-links {
  font-size: 1.875rem;
  line-height: 2.25rem;
  margin-top: 0.5rem;

  grid-column: span 3;
  grid-row-end: span 2;

  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;

  .social-link[title="Bluesky"] {
    svg:hover {
      color: #0085ff !important;
    }
  }

  .social-link[title="GitHub"] {
    svg:hover {
      color: #9334b2 !important; // Not sure about brand color
    }
  }

  .social-link[title="LinkedIn"] {
    svg:hover {
      color: #0A66C2 !important;
    }
  }

  .social-link {
    margin: 0 10px 10px 0;
    display: flex;
    transition: 200ms ease-out;

    svg {
      color: var(--color-on-background) !important;

      width: 32px;
      height: 32px;
    }

    svg:hover {
      color: var(--color-tertiary) !important;
    }
  }

  .social-link:hover {
    transform: translateZ(0);
    transform: scale(1.2);
  }
}

.card {
  list-style: none;
  display: block;
  padding: 2rem;
  margin: 0;
  border-radius: 12px;

  border: 1px solid var(--outlineColor);
  background: var(--backgroundColor);
  color: var(--foregroundColor);

  transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
}

h2 {
  margin: 0;
  padding: 0;
  font-size: 1.25rem;
  color: var(--color-primary);
  transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
}

.body {
  font-size: 1rem;
  margin-top: 0.5rem;
  margin-bottom: 0;
  transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
}
</style>
